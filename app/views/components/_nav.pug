nav.navbar
  div.container
    .row
      .col-xs-6.col-sm-4.col-md-5.col-lg-4
        .logo
          .row
            .col-xs-12.col-md-5
              a.logo__link(href=content.index.nav.logo.href)  
                img.img-responsive.logo__img(src=content.site.hostname + "/img/logo/" + content.index.nav.logo.img.link, alt=content.index.nav.logo.alt)
            .hidden-xs.col-sm-12.col-md-7     
              .logo__text!=content.index.nav.text   
      .hidden-xs.col-sm-4.col-md-4.col-lg-offset-1.text-center        
        .address        
          i.ic.ic--address
          .address__info
            .address__text!=content.index.nav.address.text
            .address__subtext!=content.index.nav.address.subtext    
      .col-xs-6.col-sm-3.text-right
        .contact
          a.contact__link(href=content.index.nav.contact.href)  
            .contact__number!=content.index.nav.contact.number 
          if (relativePath !== "success")     
            a.contact__btn
              i.contact__icon.fa.fa-phone
              a.contact__btn--text(data-toggle="modal" data-target="#nav__modal")!=content.index.nav.contact.text
          else
            a.contact__btn--text(href=content.site.hostname + "/") На главную
            