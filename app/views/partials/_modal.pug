each product, i in content.index.product
  .modal.fade(tabindex='-1', role='dialog', id='modal__product_' + i)
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          h2.sub-heading product.name
          .modal__photo
            img.modal__img(src=content.site.hostname + '/img/' + product.characteristic.src, alt= product.characteristic.src)
          .table-responsive
            table.table.table-striped
              thead
                tr
                  th
                  each head in product.characteristic.table.head
                    th!= head
              tbody
                each table, count in product.characteristic.table
                  tr
                    th(scope="row") 
                      input(type='checkbox', name= 'form[characteristic][' + table.body +']' )
